<%- | String $name, String $datadir, Integer $api_port, String $api_host, Optional[String] $anthropic_api_key | -%>
# Inventory System Configuration for <%= $name %> instance
# Managed by Puppet

# Path to inventory directory (containing inventory.json)
INVENTORY_PATH=<%= $datadir %>

# API server host and port
API_HOST=<%= $api_host %>
API_PORT=<%= $api_port %>

<% if $anthropic_api_key { -%>
# Anthropic API key for Claude chat
ANTHROPIC_API_KEY=<%= $anthropic_api_key %>
<% } -%>
